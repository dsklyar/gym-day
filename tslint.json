{
	"extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
	"linterOptions": {
		"exclude": [
			"build/**",
			"coverage/**",
			"node_modules/**",
			"public/**",
			"test-reports/**",
			"**/*.{js,jsx}",
			"ios/**",
			"android/**",
			"__tests__/**",
			".expo/**"
		]
	},
	"rules": {
		"align": [false],
		"curly": [true, "ignore-same-line"],
		"max-classes-per-file": false,
		"max-line-length": {
			"options": [100]
		},
		"no-console": true,
		"object-literal-sort-keys": false,
		"semicolon": [true, "always"],
		"trailing-comma": false,
		"indent": [true, "tabs", 2],
		"jsx-no-lambda": false
	}
}
